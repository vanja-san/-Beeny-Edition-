// Convert px to rem
rem($px)
  return unit($px / 16, 'rem')

// Convert px to em
em($px, $base = 16)
  return unit($px / $base, 'em')

// Lighten color with alpha
alpha-lighten($color, $amount)
  return rgba($color, $amount)

// Darken color with alpha
alpha-darken($color, $amount)
  return rgba($color, 1 - $amount)

// Calculate contrast ratio
contrast-ratio($color)
  $luminance = (0.2126 * red($color) + 0.7152 * green($color) + 0.0722 * blue($color)) / 255
  if $luminance > 0.5
    return #000
  else
    return #fff

// Z-index function
z($layer)
  $z-layers = {
    modal: 1000,
    overlay: 900,
    dropdown: 800,
    header: 700,
    footer: 600
  }
  return $z-layers[$layer]