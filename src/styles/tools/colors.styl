// Bee-themed Color Palette
// Created: 2025-06-30 21:03:14 by vanja-san

//
// Base Colors
//

// Медовые оттенки
$honey-bright   = #FFB627 // Яркий мед
$honey-light    = #E6A023 // Светлый мед
$honey-golden   = #D4912B // Золотистый мед
$honey-amber    = #C17F1E // Янтарный мед
$honey-dark     = #8F5E16 // Темный мед

// Восковые оттенки
$wax-light      = #F2E2C4 // Светлый воск
$wax-cream      = #E8D5B5 // Кремовый воск
$wax-natural    = #D4BC94 // Натуральный воск
$wax-aged       = #BFA67A // Состаренный воск
$wax-dark       = #A68B62 // Темный воск

// Черные оттенки
$bee-black      = #2D2A24 // Основной черный
$bee-dark       = #3D3832 // Темно-серый
$bee-grey       = #4E4B44 // Средне-серый
$bee-light      = #6E6A61 // Светло-серый
$bee-mist       = #9E988C // Дымчатый

//
// Тема для светлого оформления
//
$light = {
    // Основные цвета
    primary:    $honey-golden
    secondary:  $wax-aged
    accent:     $honey-bright
    
    // Фоны
    bg-main:    #FFFFFF
    bg-alt:     $wax-light
    bg-hover:   $wax-cream
    
    // Текст
    text-main:  $bee-black
    text-alt:   $bee-dark
    text-muted: $bee-grey
    
    // Границы
    border:     $wax-natural
    border-alt: $wax-aged
    
    // Состояния
    success:    #78A85A
    warning:    $honey-amber
    danger:     #D35D47
    info:       #5B9AA3
}

//
// Тема для темного оформления
//
$dark = {
    // Основные цвета
    primary:    $honey-amber
    secondary:  $wax-dark
    accent:     $honey-golden
    
    // Фоны
    bg-main:    #1E1C19
    bg-alt:     #2A2725
    bg-hover:   #363330
    
    // Текст
    text-main:  $wax-light
    text-alt:   $wax-cream
    text-muted: $wax-aged
    
    // Границы
    border:     $bee-dark
    border-alt: $bee-grey
    
    // Состояния
    success:    #5C8344
    warning:    $honey-dark
    danger:     #A64B38
    info:       #467A82
}

